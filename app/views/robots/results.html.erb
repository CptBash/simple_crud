<div class="container">
  <h3 style="color: #7C7C7D; padding-bottom: 25px; padding-top: 25px; text-align: center;">Hello <%= current_user.first_name.to_s %>, check out how your bots are ranking!
      <p id="notice"><%= notice %></p>
  </h3>
  <div class="row col-lg-12">
    <table>
      <tbody>
        <% @robots.each do |robot| %>
          <div class="col-lg-12" style="background-color: white; border: 30px solid #F8F9FA !important;">
            <%= link_to image_tag(robot.image.url(:thumb)), robot, class: '' %>
            <p><%= robot.name %></p>
            Votes:
            <div class="progress">
              <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="<%= robot.user_votes.count %>"
              aria-valuemin="0" aria-valuemax="100" style="width:<%=robot.user_votes.count%>%">
                <%= robot.user_votes.count %> Votes
              </div>
            </div>
          </div>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>
