<div class="container">
  <div class="col-lg-12" style="text-align: center;">
    <h3 style="color: #7C7C7D; padding-bottom: 25px; padding-top: 25px;">Log in</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, style: 'padding-right: 130px;' %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, style: 'padding-right: 100px;' %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <br />

      <div class="actions">
        <%= f.submit "Log in", style: 'width: 175px;' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
